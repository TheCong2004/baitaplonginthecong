<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quản Lý Đặt Chỗ</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    .booking-status {
      padding: 6px 12px;
      border-radius: 9999px;
      font-size: 14px;
      font-weight: 500;
    }
    .status-pending {
      background-color: #FEF3C7;
      color: #92400E;
    }
    .status-confirmed {
      background-color: #D1FAE5;
      color: #065F46;
    }
    .status-cancelled {
      background-color: #FEE2E2;
      color: #991B1B;
    }
    .btn {
      padding: 8px 16px;
      border-radius: 6px;
      font-weight: 500;
      transition: all 0.2s;
    }
    .btn-edit {
      background-color: #E5E7EB;
      color: #374151;
    }
    .btn-edit:hover {
      background-color: #D1D5DB;
    }
    .btn-cancel {
      background-color: #FEE2E2;
      color: #991B1B;
    }
    .btn-cancel:hover {
      background-color: #FCA5A5;
    }
    .btn-add {
      background-color: #3B82F6;
      color: white;
    }
    .btn-add:hover {
      background-color: #2563EB;
    }
  </style>
</head>
<body class="bg-gray-50">
  <div class="min-h-screen">
    <nav class="bg-white shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
          <h1 class="text-xl font-bold text-gray-900">Hệ Thống Quản Lý Đặt Chỗ</h1>
          <a href="/bookings/create" class="btn btn-add">
            <i class="fas fa-plus mr-2"></i>Đặt Chỗ Mới
          </a>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Khách hàng</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Giờ</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% bookings.forEach(booking => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= booking._id.toString().slice(-6).toUpperCase() %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <div class="h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center">
                          <span class="text-sm font-medium text-gray-500">
                            <%= booking.customerName.charAt(0) %>
                          </span>
                        </div>
                        <div class="ml-4">
                          <div class="text-sm font-medium text-gray-900">
                            <%= booking.customerName %>
                          </div>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= new Date(booking.date).toLocaleDateString('vi-VN') %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= booking.time %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="booking-status 
                        <%= booking.status === 'Pending' ? 'status-pending' : 
                           booking.status === 'Confirmed' ? 'status-confirmed' : 
                           'status-cancelled' %>">
                        <%= booking.status %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <div class="flex space-x-2">
                        <a href="/bookings/edit/<%= booking._id %>" class="btn btn-edit">
                          <i class="fas fa-edit mr-1"></i>Sửa
                        </a>
                        <% if (booking.status !== 'Cancelled') { %>
                          <form action="/bookings/cancel/<%= booking._id %>" method="POST" class="inline">
                            <button type="submit" class="btn btn-cancel">
                              <i class="fas fa-times mr-1"></i>Hủy
                            </button>
                          </form>
                        <% } %>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script>
    // Thêm animations cho các nút
    document.querySelectorAll('.btn').forEach(button => {
      button.addEventListener('click', function(e) {
        if (this.classList.contains('btn-cancel')) {
          if (!confirm('Bạn có chắc muốn hủy đặt chỗ này?')) {
            e.preventDefault();
          }
        }
      });
    });
  </script>
</body>
</html>